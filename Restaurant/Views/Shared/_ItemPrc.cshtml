@{
    var show = (bool)ViewData["show"];
}
<p>
    @Html.ActionLink("Add New Item", "Create","Item")
</p>
<div class="panel panel-info">
    <p>this is The partial</p>
    <div class="panel-heading">
        <h3>@Model.Item_Name</h3>

    </div>
    <div class="panel-body">
        @if (Model.Picture != null)
        {
            <img src="@Url.Content(@Model.Picture)" alt="no picture support" height="200" width="150" />
        }
    </div>
    @if (show)
    {
        <div class="panel-footer text-center">
            <a asp-action="Create" class="btn btn-default">Add new</a>
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger">Delete</a>
        </div>
    }
</div>