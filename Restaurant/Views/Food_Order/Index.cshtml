@model IEnumerable<Restaurant.Models.Food_Order>

@{
    ViewBag.Title = "Index";
}
@section head{
    <style type="text/css">
        body {
            background-image: url('../../Photo/order.jpg');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
}
<h2>All Orders</h2>
<div>
    @Ajax.ActionLink("Add", "CreatePrc", "Food_Order", new AjaxOptions
                                            {
                                                HttpMethod = "Get",
                                                UpdateTargetId = "data",
                                                InsertionMode = InsertionMode.Replace

                                            })
</div>

<table class="table" style="background-image: url('../../Photo/Order3.jpg'); background-repeat: no-repeat; background-size: cover; ">

    <tr>@Html.ActionLink("Create New", "Create", "Food_Order", new { @class = "btn" })</tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Cus_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Item_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total_Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Cus_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Item_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
<div id="data"></div>
@section scripts{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}